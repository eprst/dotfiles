NeoBundle 'repos-scala/scala-vundle'
NeoBundle 'YankRing.vim'                      " :YRShow, <C-P> after p
NeoBundle 'altercation/vim-colors-solarized'
NeoBundle 'vimoutliner/vimoutliner'           " for .otl files.. really needed?
NeoBundle 'chela_light'
